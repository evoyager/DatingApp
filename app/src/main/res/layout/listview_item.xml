    <ImageView
        android:id="@+id/photo"
        android:layout_width="360dip"
        android:layout_height="360dip"
        android:layout_margin="3dip"
        android:adjustViewBounds="true"
        android:contentDescription="Image"
        android:scaleType="centerCrop" />

</LinearLayout>